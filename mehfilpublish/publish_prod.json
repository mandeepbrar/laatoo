{
	"services":{
		"user_storer":{
			"servicename":"mongo_data_service",
			"connectionstring":"localhost",
			"database":"Users",
			"objects": {
				"default_user":"Users"
			}
		},
		"publish_prod":{
			"servicename":"mongo_data_service",
			"connectionstring":"localhost",
			"database":"publish_prod",
			"objects": {
				"article":"Articles"
			}
		},
		"auth":{
			"servicename":"auth_service",
			"user_data_svc":"user_storer",
			"path":"/auth"
		},
		"public":{
			"servicename":"static_file_service",
			"publicdir":"publish_prod/static",
			"path":""
		},
		"pageservice":{
			"servicename":"page_service",
			"pagesdir":"publish_prod/pageservice",
			"actionservice":"actionservice",
			"path":"",
			"pages":{
				"home":{
					"path":"/home",
					"type":"file",
					"destination":"publish.html",
					"authentication":"true",
					"permission":"",
					"partials": {
						"home": {
							"path":"home.html",
							"template":"publish_prod/pageservice/publish/home.html"
						},
						"articles": {
							"path":"articleslist.html",
							"template":"publish_prod/pageservice/publish/articles.html"
						},
						"articleedit":{
							"path":"articleedit.html",
							"template":"publish_prod/pageservice/publish/articleedit.html"
						},
						"createarticle":{
							"path":"createarticle.html",
							"template":"publish_prod/pageservice/publish/createarticle.html"
						},
						"viewarticle":{
							"path":"viewarticle.html",
							"template":"publish_prod/pageservice/publish/viewarticle.html"
						}
					}
				},
				"login":{
					"path":"/login",
					"type":"file",
					"destination":"login.html",
					"authentication":"true",
					"permission":""
				},
				"logout":{
					"path":"/logout",
					"type":"redirect",
					"destination":"/auth/logout"
				}
			}
		},
		"articleservice":{
			"servicename":"articleservice",
			"path":"/article",
			"entityname":"article",
			"data_svc":"publish_prod",
			"type":"core",
			"id":"Id",
			"methods": {
				"list":{
					"path":"",
					"method":"list",
					"permission":""
				},
				"get":{
					"path":"/:id",
					"method":"get",
					"permission":""
				},
				"post":{
					"path":"",
					"method":"post",
					"permission":""
				},
				"put":{
					"path":"/:id",
					"method":"put",
					"permission":""
				},
				"delete":{
					"path":"/:id",
					"method":"delete",
					"permission":""
				}
			}
		},
		"viewservice":{
			"servicename":"view_service",
			"data_svc":"publish_prod",
			"path":"/view",
			"views": {
				"articles":{
					"name":"view_articles",
					"path":"/articles",
					"type":"entitylist",
					"entities":"article",
					"joins":{
					},
					"conditions":{
					},
					"permission":""
				}
			}
		},
		"actionservice": {
			"servicename":"action_service",
			"path":"/actions",
			"actions": {
				"Home": {
					"actiontype":"openpartialpage",
					"viewmode":"link",
					"path":"/"
				},
				"View Articles": {
					"actiontype":"openpartialpage",
					"viewmode":"link",
					"path":"/articles"
				},
				"View Article": {
					"actiontype":"openpartialpage",
					"viewmode":"link",
					"path":"/article?id"
				},
				"Edit Article": {
					"actiontype":"openpartialpage",
					"viewmode":"link",
					"path":"/article/edit?id"
				}
			}
		}
	}
}