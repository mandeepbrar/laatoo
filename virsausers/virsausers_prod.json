{
	"settings": {
		"jwtsecretkey":"somekey",
		"authorization":	{
			"mode":"local"
		}
	},
	"services":{
		"user_storer":{
			"servicename":"datastore_data_service",
			"connectionstring":"localhost",
			"database":"Users",
			"objects": {
				"User":"Users",
				"Role":"Roles"				
			}
		},
		"security":{
			"servicename":"security_service",
			"bypassauth":"true",
			"pvtkey":"mykey.pem",
			"user_data_svc":"user_storer",
			"path":"/auth",
			"domains": {
				"localhost:7070":"Admin"
			},
			"seeduser": {
				"user":"user",
				"password":"password"
			}, 
			"oauthsites": {
				"google": {
					"clientid":"x",
