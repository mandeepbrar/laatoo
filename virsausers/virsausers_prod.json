						},
						"roleedit":{
							"path":"roleedit.html",
							"template":"virsausers_prod/pageservice/publish/roleedit.html"
						},
						"createrole":{
							"path":"createrole.html",
							"template":"virsausers_prod/pageservice/publish/createrole.html"
						},
						"roles":{
							"path":"roleslist.html",
							"template":"virsausers_prod/pageservice/publish/roles.html"
