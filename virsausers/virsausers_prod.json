					"path":"/logout",
					"type":"file",
					"destination":"logout.html",
					"permission":""
				}
			}
		},
		"roles":{
			"servicename":"entity_service",
			"entity":"Role",
			"path":"/role",
			"data_svc":"user_storer",
			"type":"core",
			"id":"Id",
			"methods": {
				"get":{
					"path":"/:id",
					"method":"get"
				},
				"post":{
					"path":"",
					"method":"post"
				},
				"put":{
					"path":"/:id",
					"method":"put"
				},
				"delete":{
					"path":"/:id",
					"method":"delete"
				}
			}
		},		
